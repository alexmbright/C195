<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0"
         prefWidth="800.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewController">
    <Tab fx:id="appointmentTab" text="Appointments">
        <AnchorPane minHeight="0.0" minWidth="0.0">
            <TableView fx:id="appointmentTable" layoutX="50.0" layoutY="50.0" prefHeight="350.0"
                       prefWidth="700.0">
                <columns>
                    <TableColumn prefWidth="75.0" text="C1"/>
                    <TableColumn prefWidth="75.0" text="C2"/>
                </columns>
            </TableView>
            <RadioButton fx:id="aViewAllRadio" layoutX="256.0" layoutY="20.0" mnemonicParsing="false"
                         selected="true" text="View All">
                <toggleGroup>
                    <ToggleGroup fx:id="aViewByToggle"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="aViewMonthRadio" layoutX="605.0" layoutY="20.0" mnemonicParsing="false"
                         text="View By Current Month" toggleGroup="$aViewByToggle"/>
            <RadioButton fx:id="aViewWeekRadio" layoutX="393.0" layoutY="20.0" mnemonicParsing="false"
                         text="View By Current Week" toggleGroup="$aViewByToggle"/>
            <Label layoutX="50.0" layoutY="20.0" text="Scheduled Appointments">
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
            </Label>
            <Button fx:id="aScheduleBtn" layoutX="50.0" layoutY="420.0" mnemonicParsing="false"
                    onAction="#onAddAppointment" text="Schedule New Appointment"/>
            <Button fx:id="aModifyBtn" layoutX="478.0" layoutY="420.0" mnemonicParsing="false"
                    onAction="#onModifyAppointment" text="Modify Appointment"/>
            <Button fx:id="aDeleteBtn" layoutX="626.0" layoutY="420.0" mnemonicParsing="false"
                    onAction="#onDeleteAppointment" text="Delete Appointment"/>
        </AnchorPane>
    </Tab>
    <Tab fx:id="customerTab" text="Customers">
        <AnchorPane minHeight="0.0" minWidth="0.0">
            <TableView fx:id="customerTable" layoutX="50.0" layoutY="50.0" prefHeight="350.0" prefWidth="700.0">
                <columns>
                    <TableColumn prefWidth="75.0" text="C1"/>
                    <TableColumn prefWidth="75.0" text="C2"/>
                </columns>
            </TableView>
            <Button fx:id="cAddBtn" layoutX="50.0" layoutY="420.0" mnemonicParsing="false"
                    onAction="#onAddCustomer" text="Register New Customer"/>
            <Button fx:id="cDeleteBtn" layoutX="636.0" layoutY="420.0" mnemonicParsing="false"
                    onAction="#onDeleteCustomer" text="Remove Customer"/>
            <Button fx:id="cModifyBtn" layoutX="507.0" layoutY="420.0" mnemonicParsing="false"
                    onAction="#onModifyCustomer" text="Modify Customer"/>
            <Label layoutX="50.0" layoutY="20.0" text="Customer Register">
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
            </Label>
        </AnchorPane>
    </Tab>
</TabPane>
